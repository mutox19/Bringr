<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.danilo.testingmap.DriverCarReg"
    tools:showIn="@layout/activity_driver_car_reg">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Registration"
            android:id="@+id/textView" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"

            android:textSize="22dp" />

        <!--
                        <TextView
                            android:layout_width="125dp"
                            android:layout_height="40dp"
                            android:textColor="#000000"
                            android:text="Password"
                            android:userId="@+userId/textView6"
                            android:layout_alignTop="@+userId/pword"
                            android:layout_alignRight="@+userId/textView5"
                            android:textSize="15dp"/>
                -->

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Model of Car"
            android:textColor="#000000"
            android:id="@+id/textView3"


            android:textSize="15dp"


            android:layout_below="@+id/editTxtBOCar"
            android:layout_alignLeft="@+id/btnReg"
            android:layout_alignStart="@+id/btnReg" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Brand of Car"


            android:textSize="15dp"
            android:id="@+id/textView10"


            android:layout_alignTop="@+id/editTxtBOCar"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="text"
            android:ems="10"

            android:hint="Brand of Car"
            android:textSize="15dp"
            android:id="@+id/editTxtBOCar"


            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView10"
            android:layout_toEndOf="@+id/textView10"
            android:layout_marginTop="60dp" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"

            android:hint="Model of Car"

            android:textSize="15dp"
            android:id="@+id/editTxtMOCar"


            android:layout_below="@+id/textView10"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"

            android:hint="Plate #."
            android:textColor="#000000"

            android:textSize="15dp"
            android:id="@+id/editTxtPlate"


            android:layout_below="@+id/textView10"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="33dp" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:text="Plate#"
            android:id="@+id/textView2"
            android:textColor="#000000"

            android:textSize="15dp"

            android:layout_alignBaseline="@+id/editTxtPlate"
            android:layout_alignBottom="@+id/editTxtPlate"
            android:layout_toLeftOf="@+id/editTxtPlate"
            android:layout_toStartOf="@+id/editTxtPlate" />

        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="phone|text"
            android:ems="10"

            android:hint="Phone Number"
            android:textSize="15dp"
            android:id="@+id/editTxtPhone"
            android:phoneNumber="true"


            android:layout_alignTop="@+id/textView13"
            android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:textColor="#000000"
            android:id="@+id/register_error"


            android:layout_marginBottom="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignStart="@+id/textView13" />

        <Button
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Register"

            android:textSize="13dp"
            android:id="@+id/btnReg"


            android:layout_below="@+id/textView13"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="175dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Back To Driver Registration"

            android:textSize="13dp"
            android:id="@+id/btnBack"


            android:layout_above="@+id/register_error"
            android:layout_alignRight="@+id/editTxtPhone"
            android:layout_alignEnd="@+id/editTxtPhone"
            android:layout_marginBottom="34dp"
            android:layout_alignLeft="@+id/register_error"
            android:layout_alignStart="@+id/register_error" />

        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Phone Number"

            android:textSize="15dp"
            android:id="@+id/textView13"


            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>
