<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_customer_complete_delivery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.danilo.testingmap.customerCompleteDelivery"
    tools:showIn="@layout/activity_customer_complete_delivery"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="We hope our services was good to you and that the driver has delivered the items to you, if the driver has not please click report driver, if the driver has please click order recieved to complete a qucik driver rating"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="84dp" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Order Receieved"
        android:id="@+id/orderRec"
        android:textSize="13dp"
        android:textColor="#000000"

        android:layout_marginTop="63dp"
        android:layout_below="@+id/reportDriver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Report Driver"
        android:id="@+id/reportDriver"
        android:textSize="13dp"
        android:textColor="#000000"

        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

</RelativeLayout>
