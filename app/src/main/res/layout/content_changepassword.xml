<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:text="Change your Password"
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textSize="28dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Cancel"
        android:id="@+id/btncancel"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btnchangepass"
        android:layout_toEndOf="@+id/btnchangepass"
        android:layout_marginBottom="164dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:id="@+id/alertpass"
        android:textColor="#000000"
        android:layout_below="@+id/btchangepass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="New Password"
        android:textColor="#000000"
        android:textSize="18dp"
        android:layout_above="@+id/btnchangepass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/newpass"
        android:hint="New Password"
        android:textColor="#000000"
        android:password="true"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/btnchangepass"
        android:layout_toEndOf="@+id/btnchangepass" />

    <Button
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:id="@+id/btnchangepass"
        android:textColor="#000000"
        android:textSize="13dp"
        android:layout_alignBaseline="@+id/btcancel"
        android:layout_alignBottom="@+id/btcancel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>