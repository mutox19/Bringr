<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.danilo.testingmap.DriverRegistration"
    tools:showIn="@layout/activity_driver_registration">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registration"
            android:id="@+id/textView" android:layout_gravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"

            android:textSize="22dp" />

        <!--
        <TextView
            android:layout_width="125dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:text="Password"
            android:userId="@+userId/textView6"
            android:layout_alignTop="@+userId/pword"
            android:layout_alignRight="@+userId/textView5"
            android:textSize="15dp"/>
-->

    </RelativeLayout>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:textSize="15dp"

        android:layout_alignTop="@+id/textView9"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="E-mail"
        android:textSize="15dp"

        android:layout_alignTop="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Address"

        android:textSize="15dp"

        android:id="@+id/textView12"
        android:layout_below="@+id/textView5"
        android:layout_toLeftOf="@+id/email"
        android:layout_toStartOf="@+id/email" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:hint="Address"
        android:textSize="15dp"
        android:id="@+id/editTxtAddress"

        android:inputType="textMultiLine"
        android:layout_below="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Password"
        android:id="@+id/textView9"

        android:textSize="15dp"

        android:layout_below="@+id/textView3"
        android:layout_toLeftOf="@+id/editTxtlastName"
        android:layout_toStartOf="@+id/editTxtlastName" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Email"
        android:id="@+id/textView5"

        android:textSize="15dp"


        android:layout_below="@+id/pword"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="First Name"
        android:id="@+id/textView2"
        android:textColor="#000000"

        android:textSize="15dp"


        android:layout_alignTop="@+id/fname"
        android:layout_toLeftOf="@+id/fname"
        android:layout_toStartOf="@+id/fname" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Confirm Password"
        android:id="@+id/textView8"
        android:textSize="15dp"


        android:layout_below="@+id/textView12"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Register"
        android:id="@+id/register"
        android:textSize="13dp"

        android:layout_marginTop="16dp"
        android:layout_below="@+id/bktologin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="175dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Back To Login"
        android:id="@+id/bktologin"
        android:textSize="13dp"

        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/register"
        android:layout_alignStart="@+id/register"
        android:layout_marginTop="14dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"

        android:hint="Last Name"

        android:textSize="15dp"
        android:id="@+id/editTxtlastName"

        android:layout_below="@+id/fname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Last Name"
        android:textColor="#000000"
        android:id="@+id/textView3"


        android:textSize="15dp"


        android:layout_below="@+id/fname"
        android:layout_toLeftOf="@+id/editTxtlastName"
        android:layout_toStartOf="@+id/editTxtlastName" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/confirmpword"
        android:hint="Confirm Password"

        android:textSize="15dp"

        android:layout_below="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fname"
        android:hint="First Name"
        android:textColor="#000000"

        android:textSize="15dp"


        android:layout_marginTop="56dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:textColor="#000000"
        android:id="@+id/register_error"


        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
