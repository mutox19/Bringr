<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Logout"
        android:id="@+id/logout"
        android:textSize="13dp"
        android:textColor="#000000"
        android:layout_below="@+id/btchangepass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:id="@+id/lnameTv"
        android:text="Last Name"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="First Name"
        android:id="@+id/textView2"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_below="@+id/txtInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/fname"
        android:hint="First Name"
        android:textColor="#000000"
        android:textSize="15dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:text="Last Name"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_toLeftOf="@+id/textView"
        android:textSize="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:id="@+id/lname2"
        android:hint="Last Name"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/lnameTv"
        android:layout_toEndOf="@+id/lnameTv" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:text="Email"
        android:id="@+id/textView4"
        android:textSize="15dp"
        android:layout_below="@+id/lnameTv"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="E-mail"
        android:textSize="15dp"
        android:layout_below="@+id/lname2"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Work"
        android:id="@+id/btnStartWork"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Change Password"
        android:textColor="#000000"
        android:textSize="13dp"

        android:layout_below="@+id/btnStartWork"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Welcome Driver"
        android:id="@+id/textView"
        android:textSize="22dp"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="76dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/txtInfo"
        android:enabled="false"
        android:textColor="@android:color/black"
        android:layout_marginTop="13dp"
        android:text="Driver Details"
        android:textSize="22dp"
        android:textAlignment="center"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>