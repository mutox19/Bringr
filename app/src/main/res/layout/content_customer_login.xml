<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.danilo.testingmap.CustomerLogin"
    tools:showIn="@layout/activity_customer_login">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome  Customer"
        android:id="@+id/textView" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"

        android:textSize="22dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/loginErrorMsg"
        android:textColor="#000000"


        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="126dp" />

    <Button
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="Register"
        android:id="@+id/registerbtn"
        android:textSize="13dp"
        android:textColor="#000000"

        android:layout_above="@+id/passres"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:text="Login"
        android:id="@+id/login"
        android:textSize="13dp"
        android:textColor="#000000"


        android:layout_alignBaseline="@+id/registerbtn"
        android:layout_alignBottom="@+id/registerbtn"
        android:layout_toRightOf="@+id/registerbtn"
        android:layout_toEndOf="@+id/registerbtn" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Password"
        android:id="@+id/pworda"
        android:textSize="15dp"
        android:textColor="#000000"


        android:layout_above="@+id/login"
        android:layout_marginBottom="20dp" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Email"
        android:id="@+id/textView2"
        android:textSize="15dp"
        android:textColor="#000000"

        android:layout_above="@+id/pword"
        android:layout_alignLeft="@+id/pworda"
        android:layout_alignStart="@+id/pworda"
        android:layout_marginBottom="27dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Forgot Password"
        android:id="@+id/passres"
        android:textSize="13dp"
        android:textColor="#000000"

        android:layout_above="@+id/loginErrorMsg"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:id="@+id/email"
        android:textSize="15dp"
        android:textColor="#000000"

        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pword"
        android:hint="Password"
        android:textSize="15dp"
        android:textColor="#000000"


        android:layout_alignTop="@+id/pworda"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp" />


</RelativeLayout>
